@page
@model Portfolio.Pages.IndexModel
@{
    Layout = "_Layout";
}

<main>
    <div class="main">
        <h1 class="name">Nate Tibbals</h1>
        <h2 class="title">Software Developer</h2>
    </div>
    <div class="explore-container">
        <div class="explore">
            <h3>Explore My Portfolio</h3>
            <ul>
                <a href=""><li>We-Doku</li></a>
                <a href=""><li>Pogs R' Us</li></a>
                <a href=""><li>Claire's Cookbook</li></a>
            </ul>
        </div>
        <div class="carousel">

            <div id="carousel-2" class="carousel slide carousel-fade" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousel-2" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-2" data-slide-to="1"></li>
                    <li data-target="#carousel-2" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <div class="view">
                            <img id="carousel-image" class="a-block w-100" src="~/assets/wedoku.PNG" alt="First slide">
                            <div class="mask rgba-black-light"></div>
                        </div>
                        <div class="carousel-caption">
                            <a href="#Wedoku"><h3 class="h3-responsive" id="proj-link">We-Doku</h3></a>
                            <p></p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="view">
                            <img id="carousel-image" class="a-block w-100" src="~/assets/pogs.PNG" alt="Second slide">
                            <div class="mask rgba-black-strong"></div>
                        </div>
                        <div class="carousel-caption">
                            <a href="#PogsRUs"><h3 class="h3-responsive" id="proj-link">Pogs R' Us</h3></a>
                            <p></p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="view">
                            <img id="carousel-image" class="a-block w-100" src="~/assets/cookbook.PNG" alt="Third slide">
                            <div class="mask rgba-black-slight"></div>
                        </div>
                        <div class="carousel-caption">
                            <a href="#ClairesCookbok"><h3 class="h3-responsive" id="proj-link">Claire's Cookbook</h3></a>
                            <p></p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carousel-2" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" id="arrow" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-2" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" id="arrow" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>
    </div>
</main>